# KlikkFlow Environment Configuration
# Copy this file to .env and update the values
# Last Updated: October 11, 2025

#========================================
# APPLICATION
#========================================

# Environment (development, production, test)
NODE_ENV=production

# Application port (default: 3000)
PORT=3000

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Base URL for the application
BASE_URL=http://localhost:3000

#========================================
# AUTHENTICATION (REQUIRED)
#========================================

# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-required-here

# JWT expiration time (7d, 30d, etc.)
JWT_EXPIRES_IN=7d

# Session secret for cookie encryption
SESSION_SECRET=your-session-secret-key-here

#========================================
# DATABASE - MONGODB (REQUIRED)
#========================================

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/klikkflow

# MongoDB root credentials (for Docker setup)
MONGO_ROOT_PASSWORD=changeme
MONGO_PORT=27017

#========================================
# DATABASE - POSTGRESQL (REQUIRED)
#========================================

# PostgreSQL connection string (with pgvector for AI features)
POSTGRES_URL=postgres://postgres:changeme@localhost:5432/klikkflow

# PostgreSQL credentials (for Docker setup)
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

#========================================
# CACHE - REDIS (REQUIRED)
#========================================

# Redis connection string
REDIS_URL=redis://localhost:6379

# Redis password (for Docker setup)
REDIS_PASSWORD=changeme
REDIS_PORT=6379

#========================================
# EMAIL / SMTP (OPTIONAL)
#========================================

# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@klikkflow.com

# Email verification
EMAIL_VERIFICATION_ENABLED=true

#========================================
# AI SERVICES (OPTIONAL)
#========================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Default AI model
DEFAULT_AI_MODEL=gpt-4

#========================================
# OBJECT STORAGE (OPTIONAL)
#========================================

# S3-compatible storage (AWS S3, MinIO, etc.)
S3_BUCKET=klikkflow-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Custom S3 endpoint (for MinIO or other S3-compatible services)
S3_ENDPOINT=http://localhost:9000

# Use path-style URLs (required for MinIO)
S3_FORCE_PATH_STYLE=true

#========================================
# OAUTH / SOCIAL LOGIN (OPTIONAL)
#========================================

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth callback URL
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

#========================================
# INTEGRATIONS (OPTIONAL)
#========================================

# Gmail Integration
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/oauth/gmail/callback

# Slack Integration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

#========================================
# MONITORING & OBSERVABILITY (OPTIONAL)
#========================================

# Sentry error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Log retention (days)
LOG_RETENTION_DAYS=30

# Enable metrics endpoint
ENABLE_METRICS=true

#========================================
# SECURITY
#========================================

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Enable HTTPS redirect
FORCE_HTTPS=false

# Content Security Policy
CSP_ENABLED=true

#========================================
# FEATURES
#========================================

# Enable user registration
REGISTRATION_ENABLED=true

# Email verification required
EMAIL_VERIFICATION_REQUIRED=false

# Enable AI features
AI_FEATURES_ENABLED=true

# Enable plugin marketplace
MARKETPLACE_ENABLED=true

# Enable analytics
ANALYTICS_ENABLED=true

#========================================
# PERFORMANCE
#========================================

# Node.js memory limit (MB)
NODE_OPTIONS=--max-old-space-size=2048

# Worker threads
WORKER_THREADS=4

# Queue concurrency
QUEUE_CONCURRENCY=10

# Max file upload size (MB)
MAX_UPLOAD_SIZE=50

#========================================
# DEVELOPMENT (DEV ONLY)
#========================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Frontend dev server port
VITE_PORT=5173

# Backend dev server port
BACKEND_PORT=3001

#========================================
# DOCKER (FOR DOCKER COMPOSE)
#========================================

# Container timezone
TZ=UTC

# Restart policy
RESTART_POLICY=unless-stopped

#========================================
# CUSTOM CONFIGURATION
#========================================

# Add your custom environment variables below
# CUSTOM_VAR=value
