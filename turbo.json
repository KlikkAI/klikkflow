{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "remoteCache": {
    "signature": true
  },
  "globalDependencies": [
    "**/.env*",
    "pnpm-workspace.yaml",
    "package.json",
    "tsconfig.base.json",
    ".github/workflows/**"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "DATABASE_URL",
    "MONGODB_URI",
    "POSTGRES_URL",
    "REDIS_URL",
    "JWT_SECRET",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.test.{js,ts,tsx}",
        "!**/*.spec.{js,ts,tsx}",
        "!**/coverage/**",
        "!**/node_modules/**",
        "!**/.next/cache/**",
        "!**/test-results/**",
        "!**/playwright-report/**"
      ],
      "outputs": ["dist/**", ".next/**", "build/**", "lib/**", "es/**"],
      "env": ["NODE_ENV", "DATABASE_URL", "API_URL", "VITE_API_URL"],
      "persistent": false
    },
    "build:core": {
      "inputs": [
        "packages/core/src/**",
        "packages/core/package.json",
        "packages/core/tsconfig.json"
      ],
      "outputs": ["packages/core/dist/**", "packages/core/lib/**"]
    },
    "build:backend": {
      "dependsOn": ["@klikkflow/core#build", "@klikkflow/workflow#build"],
      "inputs": [
        "packages/backend/src/**",
        "packages/backend/package.json",
        "packages/backend/tsconfig.json"
      ],
      "outputs": ["packages/backend/dist/**"],
      "env": ["NODE_ENV", "DATABASE_URL", "MONGODB_URI", "JWT_SECRET"]
    },
    "build:frontend": {
      "dependsOn": ["@klikkflow/core#build", "@klikkflow/design-system#build"],
      "inputs": [
        "packages/frontend/src/**",
        "packages/frontend/public/**",
        "packages/frontend/package.json",
        "packages/frontend/vite.config.ts",
        "packages/frontend/tsconfig.json"
      ],
      "outputs": ["packages/frontend/dist/**", "packages/frontend/build/**"],
      "env": ["NODE_ENV", "API_URL", "VITE_API_URL"]
    },
    "build:cli": {
      "dependsOn": ["@klikkflow/core#build"],
      "inputs": ["packages/@klikkflow/cli/src/**", "packages/@klikkflow/cli/package.json"],
      "outputs": ["packages/@klikkflow/cli/dist/**"]
    },
    "build:nodes": {
      "dependsOn": ["@klikkflow/core#build", "@klikkflow/workflow#build"],
      "inputs": [
        "packages/@klikkflow/nodes-*/**",
        "!packages/@klikkflow/nodes-*/**/*.test.{js,ts}"
      ],
      "outputs": ["packages/@klikkflow/nodes-*/dist/**"]
    },
    "build:design-system": {
      "inputs": [
        "packages/@klikkflow/design-system/src/**",
        "packages/@klikkflow/design-system/package.json"
      ],
      "outputs": ["packages/@klikkflow/design-system/dist/**"]
    },
    "build:ai": {
      "dependsOn": ["@klikkflow/core#build"],
      "inputs": ["packages/@klikkflow/ai/src/**", "packages/@klikkflow/ai/package.json"],
      "outputs": ["packages/@klikkflow/ai/dist/**"]
    },
    "build:workflow": {
      "dependsOn": ["@klikkflow/core#build"],
      "inputs": [
        "packages/@klikkflow/workflow/src/**",
        "packages/@klikkflow/workflow/package.json"
      ],
      "outputs": ["packages/@klikkflow/workflow/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev:backend": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@klikkflow/core#build", "@klikkflow/workflow#build"]
    },
    "dev:frontend": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@klikkflow/design-system#build", "@klikkflow/core#build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,ts,tsx}",
        "test/**/*.{js,ts,tsx}",
        "**/*.test.{js,ts,tsx}",
        "**/*.spec.{js,ts,tsx}",
        "jest.config.{js,ts}",
        "vitest.config.{js,ts}"
      ],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/unit/**"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/integration/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "lint": {
      "inputs": ["src/**/*.{js,ts,tsx,vue,json,css}", "*.{js,ts,json}", "biome.json", ".biome.json"]
    },
    "lint:fix": {
      "cache": false,
      "inputs": [
        "src/**/*.{js,ts,tsx,vue,json,css}",
        "*.{js,ts,json}",
        "biome.json",
        ".biome.json"
      ],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx}", "types/**/*.ts", "tsconfig.json", "tsconfig.*.json"],
      "outputs": []
    },
    "format": {
      "cache": false,
      "inputs": [
        "src/**/*.{js,ts,tsx,vue,json,css,md}",
        "*.{js,ts,json,md}",
        "biome.json",
        ".biome.json"
      ]
    },
    "format:check": {
      "inputs": [
        "src/**/*.{js,ts,tsx,vue,json,css,md}",
        "*.{js,ts,json,md}",
        "biome.json",
        ".biome.json"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "security:audit": {
      "inputs": ["package.json", "pnpm-lock.yaml"]
    },
    "docs:build": {
      "dependsOn": ["^build"],
      "outputs": ["docs/api/**", "docs/build/**"]
    },
    "bundle-analysis": {
      "dependsOn": ["build"],
      "outputs": ["bundle-analysis/**"]
    },
    "dup:check": {
      "cache": false,
      "inputs": [
        "packages/**/{src,app}/**/*.{ts,tsx,js}",
        "!**/node_modules/**",
        "!**/dist/**",
        "!.turbo/**"
      ],
      "outputs": [],
      "env": ["CI"]
    }
  }
}
