{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "build:backend": {
      "dependsOn": ["@reporunner/core#build"],
      "outputs": ["packages/backend/dist/**"]
    },
    "build:frontend": {
      "dependsOn": ["@reporunner/core#build"],
      "outputs": ["packages/frontend/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "deploy:backend": {
      "dependsOn": ["build:backend"]
    },
    "deploy:frontend": {
      "dependsOn": ["build:frontend"]
    }
  },
  "globalDependencies": ["**/.env*"]
}
