{
  "name": "reporunner",
  "version": "1.0.0",
  "description": "Open-source workflow automation platform with native AI capabilities - n8n alternative",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "setup": "pnpm install && node scripts/setup-env.js",
    "build:backend": "turbo run build --filter=@reporunner/backend",
    "build:frontend": "turbo run build --filter=@reporunner/frontend",
    "deploy:backend": "turbo run deploy --filter=@reporunner/backend",
    "deploy:frontend": "turbo run deploy --filter=@reporunner/frontend",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "workflow",
    "automation",
    "n8n",
    "alternative",
    "ai",
    "integration",
    "open-source",
    "monorepo"
  ],
  "author": "Reporunner Team",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "turbo": "^2.5.6",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
