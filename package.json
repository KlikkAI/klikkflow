{
  "name": "reporunner",
  "version": "1.0.0",
  "description": "Open-source workflow automation platform with native AI capabilities - n8n alternative",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=18.20.0",
    "pnpm": ">=9.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "prepare": "node scripts/prepare.js",
    "preinstall": "node scripts/block-npm-install.js",
    "build": "turbo run build",
    "build:affected": "turbo run build --affected",
    "build:backend": "turbo run build --filter=@reporunner/backend",
    "build:frontend": "turbo run build --filter=@reporunner/frontend",
    "build:nodes": "turbo run build --filter=@reporunner/nodes-*",
    "build:ai": "turbo run build --filter=@reporunner/ai-*",
    "build:design-system": "turbo run build --filter=@reporunner/design-system",
    "dev": "turbo run dev --parallel --env-mode=loose",
    "dev:backend": "turbo run dev:backend --env-mode=loose",
    "dev:frontend": "turbo run dev:frontend --env-mode=loose",
    "dev:ai": "turbo run dev --parallel --env-mode=loose --filter=@reporunner/ai-* --filter=@reporunner/core",
    "dev:full": "run-p dev:backend dev:frontend",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "test:affected": "turbo run test --affected",
    "test:ci": "turbo run test --continue --concurrency=1",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe .",
    "lint:ci": "biome ci .",
    "lint:affected": "turbo run lint --affected",
    "type-check": "turbo run type-check",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "organize-imports": "biome check --write .",
    "clean": "turbo run clean",
    "reset": "node scripts/reset.js",
    "setup": "pnpm install && node scripts/setup-env.js",
    "setup-node": "node scripts/setup-node.js",
    "deploy:backend": "turbo run deploy --filter=@reporunner/backend",
    "deploy:frontend": "turbo run deploy --filter=@reporunner/frontend",
    "security:audit": "turbo run security:audit",
    "bundle:analyze": "turbo run bundle-analysis",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "husky": "husky",
    "commit": "cz",
    "docs": "typedoc",
    "docs:build": "turbo run docs:build",
    "docs:serve": "pnpm docs && cd docs/api && python -m http.server 8080",
    "start": "run-script-os",
    "start:default": "cd packages/cli/bin && ./reporunner",
    "start:tunnel": "./packages/cli/bin/reporunner start --tunnel",
    "start:windows": "cd packages/cli/bin && reporunner",
    "webhook": "./packages/cli/bin/reporunner webhook",
    "worker": "./packages/cli/bin/reporunner worker",
    "watch": "turbo run watch --concurrency=30"
  },
  "keywords": [
    "workflow",
    "automation",
    "n8n",
    "alternative",
    "ai",
    "integration",
    "open-source",
    "monorepo"
  ],
  "author": "Reporunner Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@types/jest": "^29.5.3",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.3",
    "babel-plugin-transform-import-meta": "^2.3.2",
    "bundlemon": "^3.1.0",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-expect-message": "^1.1.3",
    "jest-junit": "^16.0.0",
    "jest-mock": "^29.6.2",
    "jest-mock-extended": "^3.0.4",
    "lefthook": "^1.7.15",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.1.6",
    "nock": "^14.0.1",
    "nodemon": "^3.0.1",
    "npm-run-all2": "^7.0.2",
    "p-limit": "^3.1.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.1",
    "run-script-os": "^1.0.7",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.10",
    "tsc-watch": "^6.2.0",
    "turbo": "catalog:",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "catalog:",
    "zx": "^8.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc}": [
      "biome format --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sqlite3",
      "bcrypt",
      "canvas",
      "sharp"
    ],
    "overrides": {
      "@types/node": "catalog:",
      "axios": "1.12.0",
      "chokidar": "4.0.3",
      "esbuild": "^0.25.0",
      "multer": "^2.0.2",
      "semver": "^7.5.4",
      "tslib": "^2.6.2",
      "tsconfig-paths": "^4.2.0",
      "typescript": "catalog:",
      "ws": ">=8.17.1",
      "brace-expansion@1": "1.1.12",
      "brace-expansion@2": "2.0.2",
      "date-fns": "2.30.0",
      "form-data": "4.0.4"
    },
    "packageExtensions": {
      "@anthropic-ai/sdk": {
        "peerDependencies": {
          "zod": "*"
        }
      }
    }
  }
}
