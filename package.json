{
  "name": "reporunner",
  "version": "1.0.0",
  "description": "Open-source workflow automation platform with native AI capabilities - n8n alternative",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=18.20.0",
    "pnpm": ">=9.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "prepare": "node development/scripts/prepare.js",
    "preinstall": "node development/scripts/block-npm-install.js",
    "build": "turbo run build",
    "build:affected": "turbo run build --affected",
    "build:backend": "turbo run build --filter=@reporunner/backend",
    "build:frontend": "turbo run build --filter=@reporunner/frontend",
    "build:cli": "turbo run build --filter=@reporunner/cli",
    "build:nodes": "turbo run build --filter=@reporunner/nodes-*",
    "build:ai": "turbo run build --filter=@reporunner/ai",
    "build:design-system": "turbo run build --filter=@reporunner/design-system",
    "dev": "turbo run dev --parallel --env-mode=loose",
    "dev:backend": "turbo run dev --filter=@reporunner/backend --env-mode=loose",
    "dev:frontend": "turbo run dev --filter=@reporunner/frontend --env-mode=loose",
    "dev:ai": "turbo run dev --parallel --env-mode=loose --filter=@reporunner/ai --filter=@reporunner/core",
    "dev:full": "run-p dev:backend dev:frontend",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "test:affected": "turbo run test --affected",
    "test:ci": "turbo run test --continue --concurrency=1",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe .",
    "lint:ci": "biome ci .",
    "lint:affected": "turbo run lint --affected",
    "type-check": "turbo run type-check",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:css": "biome format --write .",
    "format:html": "biome format --write .",
    "format:json": "biome format --write .",
    "organize-imports": "biome check --write .",
    "clean": "turbo run clean",
    "reset": "node development/scripts/reset.js",
    "setup": "pnpm install && node development/scripts/setup-env.js",
    "setup-node": "node development/scripts/setup-node.js",
    "deploy:backend": "turbo run deploy --filter=@reporunner/backend",
    "deploy:frontend": "turbo run deploy --filter=@reporunner/frontend",
    "security:audit": "turbo run security:audit",
    "bundle:analyze": "turbo run bundle-analysis",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "husky": "husky",
    "commit": "cz",
    "docs": "typedoc",
    "docs:build": "turbo run docs:build",
    "docs:serve": "pnpm docs && cd docs/api && python -m http.server 8080",
    "start": "pnpm run dev:backend",
    "start:full": "pnpm run dev:full",
    "watch": "turbo run watch --concurrency=30",
    "dup:check": "jscpd",
    "dup:check:strict": "jscpd --threshold 0",
    "dup:report": "bash development/dup-report.sh",
    "deps:check": "pnpm dlx npm-check-updates",
    "deps:update": "pnpm dlx npm-check-updates -u",
    "analyze:deps": "madge --circular --extensions ts,tsx ./packages",
    "quality": "pnpm lint && pnpm type-check && pnpm test:coverage",
    "quality:fix": "pnpm lint:fix && pnpm format && pnpm organize-imports",
    "validate": "pnpm quality && pnpm security:audit",
    "clean:all": "pnpm clean && rimraf node_modules packages/**/node_modules"
  },
  "keywords": [
    "workflow",
    "automation",
    "n8n",
    "alternative",
    "ai",
    "integration",
    "open-source",
    "monorepo"
  ],
  "author": "Reporunner Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.3",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "bundlemon": "^3.1.0",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-expect-message": "^1.1.3",
    "jest-junit": "^16.0.0",
    "jest-mock": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "lefthook": "^1.13.4",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.1",
    "madge": "^8.0.0",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.3.0",
    "npm-run-all2": "^8.0.4",
    "p-limit": "^7.1.1",
    "rimraf": "^6.0.1",
    "run-script-os": "^1.1.6",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^7.1.1",
    "turbo": "catalog:",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "catalog:",
    "zx": "^8.8.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc}": [
      "biome check --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sqlite3",
      "bcrypt",
      "canvas",
      "sharp"
    ],
    "overrides": {
      "@types/node": "catalog:",
      "axios": "1.12.0",
      "chokidar": "4.0.3",
      "esbuild": "^0.25.0",
      "multer": "^2.0.2",
      "semver": "^7.5.4",
      "tslib": "^2.6.2",
      "tsconfig-paths": "^4.2.0",
      "typescript": "catalog:",
      "ws": ">=8.17.1",
      "brace-expansion@1": "1.1.12",
      "brace-expansion@2": "2.0.2",
      "date-fns": "2.30.0",
      "form-data": "4.0.4"
    },
    "packageExtensions": {
      "@anthropic-ai/sdk": {
        "peerDependencies": {
          "zod": "*"
        }
      }
    }
  }
}
