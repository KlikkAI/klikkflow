# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,vue,json,jsonc,css,scss,sass,less,html,xml,yaml,yml,md}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{go,rs,java,cs,php}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 120

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.{dockerfile,Dockerfile}]
indent_style = space
indent_size = 2