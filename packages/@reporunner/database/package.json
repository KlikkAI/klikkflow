{
  "name": "@reporunner/database",
  "version": "1.0.0",
  "description": "Hybrid database layer for Reporunner (MongoDB + PostgreSQL)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "migrate": "tsx src/scripts/migrate.ts",
    "seed": "tsx src/scripts/seed.ts",
    "db:setup": "tsx src/scripts/setup.ts",
    "db:reset": "tsx src/scripts/reset.ts"
  },
  "dependencies": {
    "@reporunner/core": "workspace:*",
    "@reporunner/api-types": "workspace:*",
    "@reporunner/constants": "workspace:*",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.1",
    "pg": "^8.14.0",
    "drizzle-orm": "^0.29.0",
    "drizzle-kit": "^0.20.0",
    "@neondatabase/serverless": "^0.9.0",
    "postgres": "^3.4.0",
    "pgvector": "^0.2.0",
    "redis": "^4.7.0",
    "ioredis": "^5.5.1",
    "typeorm": "^0.3.24",
    "winston": "^3.17.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "jest": "catalog:",
    "@types/jest": "catalog:",
    "tsup": "^7.0.0",
    "vitest": "catalog:"
  }
}
