{
  "name": "reporunner/php-sdk",
  "description": "PHP SDK for Reporunner workflow automation platform",
  "type": "library",
  "keywords": ["workflow", "automation", "api", "sdk", "reporunner"],
  "homepage": "https://github.com/reporunner/reporunner",
  "license": "MIT",
  "authors": [
    {
      "name": "Reporunner Team",
      "email": "team@reporunner.com",
      "homepage": "https://reporunner.com"
    }
  ],
  "support": {
    "issues": "https://github.com/reporunner/reporunner/issues",
    "source": "https://github.com/reporunner/reporunner"
  },
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.8",
    "guzzlehttp/psr7": "^2.6",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.1|^2.0",
    "psr/log": "^1.1|^2.0|^3.0",
    "symfony/serializer": "^6.4|^7.0",
    "symfony/property-access": "^6.4|^7.0",
    "symfony/property-info": "^6.4|^7.0",
    "phpdocumentor/reflection-docblock": "^5.3",
    "ratchet/pawl": "^0.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "psalm/plugin-phpunit": "^0.18.4",
    "vimeo/psalm": "^5.18",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.48",
    "rector/rector": "^0.19",
    "phpbench/phpbench": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Reporunner\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Reporunner\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "psalm": "psalm",
    "phpstan": "phpstan analyse",
    "cs-fix": "php-cs-fixer fix",
    "rector": "rector process",
    "benchmark": "phpbench run --report=aggregate"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
