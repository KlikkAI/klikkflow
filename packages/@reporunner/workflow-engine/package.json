{
  "name": "@reporunner/workflow-engine",
  "version": "1.0.0",
  "description": "Scalable workflow execution engine for Reporunner",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./queue": {
      "types": "./dist/queue/index.d.ts",
      "import": "./dist/queue/index.mjs",
      "require": "./dist/queue/index.js"
    },
    "./workers": {
      "types": "./dist/workers/index.d.ts",
      "import": "./dist/workers/index.mjs",
      "require": "./dist/workers/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@reporunner/core": "workspace:*",
    "bull": "^4.12.0",
    "ioredis": "^5.3.0",
    "bullmq": "^4.15.0",
    "uuid": "^9.0.0",
    "cron": "^3.1.0",
    "node-cron": "^3.0.0",
    "ws": "^8.14.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "eventemitter3": "^5.0.0",
    "p-queue": "^8.0.0",
    "p-limit": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/uuid": "^9.0.0",
    "@types/cron": "^2.0.0",
    "@types/node-cron": "^3.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "jest": "catalog:",
    "@types/jest": "catalog:",
    "tsup": "catalog:",
    "@biomejs/biome": "catalog:"
  }
}
