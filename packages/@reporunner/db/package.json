{
  "name": "@reporunner/db",
  "version": "0.0.1",
  "description": "Database layer for Reporunner - Hybrid MongoDB + PostgreSQL architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@reporunner/api-types": "workspace:*",
    "@reporunner/constants": "workspace:*",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "ioredis": "^5.5.1",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.1",
    "pg": "^8.14.0",
    "pgvector": "^0.2.0",
    "redis": "^4.7.0",
    "typeorm": "^0.3.24",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^22.13.7",
    "@types/pg": "^8.11.10",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
