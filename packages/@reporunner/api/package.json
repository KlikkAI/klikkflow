{
  "name": "@reporunner/api",
  "version": "1.0.0",
  "description": "REST API with OpenAPI specifications for Reporunner",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "swagger:generate": "swagger-jsdoc -d swagger.config.js src/**/*.ts -o dist/swagger.json",
    "docs:serve": "swagger-ui-serve dist/swagger.json"
  },
  "dependencies": {
    "@reporunner/core": "workspace:*",
    "@reporunner/auth": "workspace:*",
    "@reporunner/workflow-engine": "workspace:*",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "express-slow-down": "^2.0.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^5.0.0",
    "express-openapi-validator": "^5.1.0",
    "openapi-types": "^12.1.0",
    "express-validator": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.11.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.0",
    "connect-redis": "^7.1.0",
    "ioredis": "^5.3.0",
    "zod": "^3.22.0",
    "zod-to-openapi": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/compression": "^1.7.0",
    "@types/morgan": "^1.9.0",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.0",
    "@types/multer": "^1.4.0",
    "@types/cookie-parser": "^1.4.0",
    "@types/express-session": "^1.17.0",
    "tsx": "^4.0.0",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "jest": "catalog:",
    "@types/jest": "catalog:",
    "tsup": "^7.0.0"
  }
}
