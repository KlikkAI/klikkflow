{
  "name": "@reporunner/auth",
  "version": "1.0.0",
  "description": "Enterprise authentication and authorization for Reporunner",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.mjs",
      "require": "./dist/middleware/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.mjs",
      "require": "./dist/providers/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@node-saml/passport-saml": "^5.1.0",
    "@reporunner/core": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "otpauth": "^9.1.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.7.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/jest": "catalog:",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "catalog:",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/passport-local": "^1.0.0",
    "@types/passport-oauth2": "^1.4.0",
    "@types/qrcode": "^1.5.0",
    "@types/speakeasy": "^2.0.0",
    "jest": "catalog:",
    "tsup": "^7.2.0",
    "typescript": "catalog:"
  }
}
