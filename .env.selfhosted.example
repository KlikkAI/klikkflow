# =================================================================
# Reporunner Self-Hosted Configuration
# =================================================================
# Copy this file to .env and configure for your self-hosted instance
#
# IMPORTANT: This is for SELF-HOSTED deployments only.
# If you're running the SaaS version, use .env.example instead.
# =================================================================

# -----------------------------------------------------------------
# Instance Activation (REQUIRED)
# -----------------------------------------------------------------
# Get your activation key from: https://reporunner.com/settings/api-keys
# After registering, create an API key and use it here to activate your instance

ACTIVATION_KEY=rkr_live_your_activation_key_here

# Central API URL - DO NOT CHANGE unless running your own licensing server
CENTRAL_API_URL=https://api.reporunner.com

# Instance Configuration
INSTANCE_HOSTNAME=localhost  # Your instance hostname or IP
INSTANCE_PLATFORM=docker      # Options: docker, vps, local, kubernetes, cloud

# -----------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------

# MongoDB Connection
MONGODB_URI=mongodb://mongodb:27017/reporunner
# For external MongoDB:
# MONGODB_URI=mongodb://username:password@your-mongo-host:27017/reporunner

# PostgreSQL Connection (for vector search and advanced features)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=reporunner
POSTGRES_USER=reporunner
POSTGRES_PASSWORD=reporunner_password
# Full connection string (alternative):
# DATABASE_URL=postgresql://reporunner:reporunner_password@postgres:5432/reporunner

# Redis Connection (for caching and queues)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# Full connection string (alternative):
# REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-for-credentials

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------
# Telemetry & Updates (Optional)
# -----------------------------------------------------------------

# Telemetry - Anonymous usage statistics
# Helps improve the platform. No sensitive data is collected.
TELEMETRY_ENABLED=true

# Automatic Updates
# Check for updates daily (requires manual apply)
AUTO_UPDATE_CHECK=true

# Analytics - Anonymous workflow and execution metrics
ANALYTICS_ENABLED=true

# -----------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------

# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# -----------------------------------------------------------------
# OAuth Configuration (Optional)
# -----------------------------------------------------------------

# Google OAuth (for Google integrations)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/oauth/google/callback

# GitHub OAuth (for GitHub integrations)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:5000/api/oauth/github/callback

# -----------------------------------------------------------------
# AI/LLM Configuration (Optional)
# -----------------------------------------------------------------

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-key

# Ollama (self-hosted LLM)
OLLAMA_BASE_URL=http://localhost:11434

# -----------------------------------------------------------------
# Advanced Configuration
# -----------------------------------------------------------------

# Logging
LOG_LEVEL=info  # Options: error, warn, info, http, verbose, debug, silly
LOG_FILE_PATH=./logs

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Worker Configuration (for background jobs)
WORKER_CONCURRENCY=5
QUEUE_NAME=reporunner-jobs

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# -----------------------------------------------------------------
# Development/Debug (Remove in production)
# -----------------------------------------------------------------

# DEBUG=*  # Uncomment for verbose debug logs
# MOCK_ACTIVATION=true  # Uncomment to skip activation check (DEV ONLY)
