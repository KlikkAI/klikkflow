  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Failed Login Attempts (1h)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(increase(klikkflow_auth_failed_total[1h]))",
          "legendFormat": "Failed Logins",
          "refId": "A"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Suspicious API Calls (1h)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
