        {
          "expr": "sum(increase(klikkflow_api_suspicious_total[1h]))",
          "legendFormat": "Suspicious",
          "refId": "A"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "fieldConfig": {
        "defaults": {
