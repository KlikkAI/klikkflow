    {
      "type": "timeseries",
      "title": "Permission Denied Events",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "sum(rate(klikkflow_permission_denied_total[5m])) by (resource)",
          "legendFormat": "{{resource}}",
          "refId": "A"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "table",
      "title": "Top Failed Login IPs (24h)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "topk(20, sum(increase(klikkflow_auth_failed_total[24h])) by (ip))",
          "legendFormat": "{{ip}}",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true },
            "indexByName": { "ip": 0, "Value": 1 },
            "renameByName": { "ip": "IP Address", "Value": "Failed Attempts" }
          }
        }
      ]
    },
    {
      "type": "table",
      "title": "Recent Security Events",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "expr": "klikkflow_security_events_total",
          "legendFormat": "{{type}} - {{severity}}",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "instance": true, "job": true },
            "indexByName": { "type": 0, "severity": 1, "Value": 2 },
            "renameByName": { "type": "Event Type", "severity": "Severity", "Value": "Count" }
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Brute Force Detection",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 36 },
      "targets": [
        {
          "expr": "sum(rate(klikkflow_auth_failed_total[1m])) by (ip) > 5",
          "legendFormat": "{{ip}} (potential brute force)",
          "refId": "A"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "yellow", "value": 5 }, { "color": "red", "value": 10 }]
          }
        }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["klikkflow", "security", "authentication", "events"],
