      "datasource": { "type": "prometheus", "uid": "PROM_DS" },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Failed Login Attempts by IP",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(klikkflow_auth_failed_total[5m])) by (ip))",
          "legendFormat": "{{ip}}",
          "refId": "A"
        }
