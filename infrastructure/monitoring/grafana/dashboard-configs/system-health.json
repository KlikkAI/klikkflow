{
  "annotations": {"list": []},
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "iteration": 1,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "System Uptime",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=~\"reporunner.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 300},
              {"color": "green", "value": 3600}
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Services",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "count(up{job=~\"reporunner.*\"})",
          "legendFormat": "Services",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null}
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Services Down",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "count(up{job=~\"reporunner.*\"} == 0)",
          "legendFormat": "Down",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Active Alerts",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\", job=~\"reporunner.*\"})",
          "legendFormat": "Firing",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage by Service",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=~\"reporunner.*\"}[5m]) * 100",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage by Service",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=~\"reporunner.*\"} / 1024 / 1024",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Network I/O",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo\"}[5m])",
          "legendFormat": "RX {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo\"}[5m])",
          "legendFormat": "TX {{device}}",
          "refId": "B"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Disk Usage",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_avail_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100",
          "legendFormat": "Disk Usage %",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "type": "table",
      "title": "Service Status",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "up{job=~\"reporunner.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "PROM_DS"},
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "indexByName": {"job": 0, "Value": 1},
            "renameByName": {"job": "Service", "Value": "Status"}
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Status"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "mappings",
                "value": [
                  {"type": "value", "value": "0", "text": "Down", "color": "red"},
                  {"type": "value", "value": "1", "text": "Up", "color": "green"}
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["reporunner", "system", "health"],
  "templating": {"list": []},
  "time": {"from": "now-6h", "to": "now"},
  "timezone": "",
  "title": "Reporunner System Health Overview",
  "uid": "reporunner-system-health",
  "version": 1
}
