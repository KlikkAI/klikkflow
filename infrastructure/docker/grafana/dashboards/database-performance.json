{
  "dashboard": {
    "title": "Database Performance Dashboard",
    "tags": ["reporunner", "database", "mongodb", "postgresql"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "MongoDB Operations/sec",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(mongodb_opcounters_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Operations/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "MongoDB Connections",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "mongodb_connections{state=\"current\"}",
            "legendFormat": "Current",
            "refId": "A"
          },
          {
            "expr": "mongodb_connections{state=\"available\"}",
            "legendFormat": "Available",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "MongoDB Query Execution Time",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(mongodb_mongod_op_latencies_latency_total[5m]) / rate(mongodb_mongod_op_latencies_ops_total[5m])",
            "legendFormat": "{{type}} latency",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "Âµs",
            "label": "Latency"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "MongoDB Memory Usage",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "mongodb_memory{type=\"resident\"}",
            "legendFormat": "Resident",
            "refId": "A"
          },
          {
            "expr": "mongodb_memory{type=\"virtual\"}",
            "legendFormat": "Virtual",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "PostgreSQL Connections",
        "type": "gauge",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"reporunner\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "PostgreSQL Transaction Rate",
        "type": "graph",
        "gridPos": {
          "x": 6,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"reporunner\"}[5m])",
            "legendFormat": "Commits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback{datname=\"reporunner\"}[5m])",
            "legendFormat": "Rollbacks",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Transactions/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "PostgreSQL Cache Hit Ratio",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 16,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 * (sum(pg_stat_database_blks_hit{datname=\"reporunner\"}) / (sum(pg_stat_database_blks_hit{datname=\"reporunner\"}) + sum(pg_stat_database_blks_read{datname=\"reporunner\"})))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 90
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 8,
        "title": "Database Sizes",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "mongodb_dbstats_dataSize",
            "format": "table",
            "instant": true,
            "legendFormat": "MongoDB {{db}}",
            "refId": "A"
          },
          {
            "expr": "pg_database_size_bytes{datname=\"reporunner\"}",
            "format": "table",
            "instant": true,
            "legendFormat": "PostgreSQL",
            "refId": "B"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "Value": "Size (bytes)",
                "db": "Database",
                "datname": "Database"
              }
            }
          }
        ]
      }
    ]
  }
}
