{
  "dashboard": {
    "title": "Security Dashboard",
    "tags": ["klikkflow", "security", "authentication", "threats"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Attempts",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(auth_attempts_total{service=\"backend\"}[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Attempts/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Failed Login Rate (%)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 * rate(auth_attempts_total{service=\"backend\",status=\"failed\"}[5m]) / rate(auth_attempts_total{service=\"backend\"}[5m])",
            "legendFormat": "Failure rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Failure Rate",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [50],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "High Failed Login Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Suspicious Activity (Rate Limiting)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(rate_limit_exceeded_total{service=\"backend\"}[5m])",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Rate limit hits/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Sessions",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "active_sessions_total{service=\"backend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Account Lockouts",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "increase(account_lockouts_total{service=\"backend\"}[24h])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Top Failed Login IPs",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, increase(auth_attempts_total{service=\"backend\",status=\"failed\"}[24h]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "Value": "Failed Attempts",
                "ip": "IP Address",
                "user_agent": "User Agent"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "OAuth Token Grants",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(oauth_token_grants_total{service=\"backend\"}[5m])",
            "legendFormat": "{{grant_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Grants/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Password Reset Requests",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "increase(password_reset_requests_total{service=\"backend\"}[1h])",
            "legendFormat": "Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Requests"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "title": "Invalid Token Attempts",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(invalid_token_attempts_total{service=\"backend\"}[5m])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Attempts/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "Credential Verifications",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(increase(credential_verifications_total{service=\"backend\"}[24h])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 11,
        "title": "API Key Usage",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(api_key_requests_total{service=\"backend\"}[5m])",
            "legendFormat": "{{key_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
}
