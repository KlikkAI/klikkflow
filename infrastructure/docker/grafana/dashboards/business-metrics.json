{
  "dashboard": {
    "title": "Business Metrics Dashboard",
    "tags": ["klikkflow", "business", "metrics", "kpi"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "refresh": "5m",
    "panels": [
      {
        "id": 1,
        "title": "Total Active Users",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "count(increase(user_activity_total{service=\"backend\"}[24h]) > 0)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "green",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Workflows",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "total_workflows{service=\"backend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        }
      },
      {
        "id": 3,
        "title": "Active Workflows",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "active_workflows{service=\"backend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        }
      },
      {
        "id": 4,
        "title": "Total Executions (24h)",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "increase(workflow_executions_total{service=\"backend\"}[24h])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Daily Active Users (DAU)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "count(increase(user_activity_total{service=\"backend\"}[24h]) > 0)",
            "legendFormat": "DAU",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Active Users"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Workflow Creation Trend",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "increase(workflows_created_total{service=\"backend\"}[1d])",
            "legendFormat": "Workflows created",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Workflows"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Execution Success Rate (%)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 * sum(increase(workflow_executions_total{service=\"backend\",status=\"success\"}[1h])) / sum(increase(workflow_executions_total{service=\"backend\"}[1h]))",
            "legendFormat": "Success rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Success Rate",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Average Workflows per User",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "total_workflows{service=\"backend\"} / total_users{service=\"backend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 20,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 2
                },
                {
                  "color": "green",
                  "value": 5
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "title": "Top 10 Most Active Users",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, increase(user_workflow_executions_total{service=\"backend\"}[7d]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "Value": "Executions",
                "user_id": "User ID",
                "user_name": "User Name"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "Top 10 Most Used Integrations",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, increase(integration_usage_total{service=\"backend\"}[7d]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "Value": "Usage Count",
                "integration_id": "Integration",
                "integration_name": "Name"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "Credential Types Distribution",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(credentials_total{service=\"backend\"}) by (type)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 12,
        "title": "Organization Growth",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "organizations_total{service=\"backend\"}",
            "legendFormat": "Total organizations",
            "refId": "A"
          },
          {
            "expr": "increase(organizations_created_total{service=\"backend\"}[1d])",
            "legendFormat": "New organizations",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Organizations"
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
}
