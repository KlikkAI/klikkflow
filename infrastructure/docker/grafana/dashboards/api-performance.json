{
  "dashboard": {
    "title": "API Performance Dashboard",
    "tags": ["reporunner", "api", "performance"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{service=\"backend\"}[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"backend\"}[5m]))",
            "legendFormat": "p95 {{path}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"backend\"}[5m]))",
            "legendFormat": "p50 {{path}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 * rate(http_requests_total{service=\"backend\",status=~\"5..\"}[5m]) / rate(http_requests_total{service=\"backend\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "A"
          },
          {
            "expr": "100 * rate(http_requests_total{service=\"backend\",status=~\"4..\"}[5m]) / rate(http_requests_total{service=\"backend\"}[5m])",
            "legendFormat": "4xx errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Error Rate",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Status Code Distribution",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"backend\",status=~\"2..\"}[5m]))",
            "legendFormat": "2xx",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{service=\"backend\",status=~\"4..\"}[5m]))",
            "legendFormat": "4xx",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{service=\"backend\",status=~\"5..\"}[5m]))",
            "legendFormat": "5xx",
            "refId": "C"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(nodejs_active_handles{service=\"backend\"})",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value"
        }
      },
      {
        "id": 6,
        "title": "Top 10 Slowest Endpoints (p95)",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"backend\"}[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "Value": "Response Time (s)",
                "path": "Endpoint",
                "method": "Method"
              }
            }
          }
        ]
      }
    ]
  }
}
