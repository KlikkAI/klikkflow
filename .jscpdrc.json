{
  "threshold": 5,
  "reporters": ["html", "console"],
  "ignore": [
    "**/*.min.js",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**",
    "**/.turbo/**",
    "**/coverage/**",
    "**/test-performance-data-*/**",
    "**/*.d.ts"
  ],
  "format": ["typescript", "javascript", "jsx", "tsx"],
  "absolute": true,
  "gitignore": true,
  "mode": "mild",
  "minLines": 10,
  "minTokens": 70,
  "output": "./reports/jscpd",
  "formatsExts": {
    "typescript": ["ts", "tsx"],
    "javascript": ["js", "jsx"]
  }
}
